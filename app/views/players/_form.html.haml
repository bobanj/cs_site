-# frozen_string_literal: true
= simple_form_for(@player) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :team
    = f.input :name
    = f.input :country
    = f.input :nickname
    = f.input :status
    = f.input :logo_path
    = f.input :hltv_url
    = f.input :hltv_id
    = f.input :hltv_photo_url

  .form-actions
    = f.button :submit
