!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title CsSite
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    %script#browser-ponies-config{:src => "https://panzi.github.io/Browser-Ponies/basecfg.js", :type => "text/javascript"}
    %script#browser-ponies-script{:src => "https://panzi.github.io/Browser-Ponies/browserponies.js", :type => "text/javascript"}
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = turbo_refreshes_with method: :morph, scroll: :preserve
    = javascript_importmap_tags
    = yield :head
  %body
    = render partial: 'navbar'
    .container
      - flash.each do |key, value|
        %div{:class => "alert #{bootstrap_class_for(key)} flash__message", data: {controller: 'removals', action: 'animationend->removals#remove'}}= value
      = yield
