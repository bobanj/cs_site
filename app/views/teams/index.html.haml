%h1 Listing teams

%table
  %thead
    %tr
      %th Logo
      %th Team Name
      %th Points
      %th Standing
      %th HLTV
      %th
      %th
      %th
      %th
      %th
      %th
      %th

  %tbody
    - @teams.each do |team|
      %tr
        %td
          - if team.logo_path.present?
            = image_tag team.logo_path, height: '30', width: '30', alt: team.name, class: 'team-logo'
        %td.fw-bold= team.name
        %td= team.points
        %td.text-center= team.standing
        %td= link_to "HLTV", "https://www.hltv.org/team/#{team.hltv_id}/#{team.hltv_path_name}#tab-rosterBox", target: "_blank"
        %td= link_to "HLTV STATS", team.hltv_url, target: "_blank"
        %td= link_to 'Show', team
        %td= link_to 'Edit', edit_team_path(team)
        %td= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Team', new_team_path
